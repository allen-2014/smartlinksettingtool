<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sola_window_background_color"
    android:orientation="vertical" >

    
    <ImageView
            
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="codebar ok"
            android:background="@drawable/sola_ok_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="扫码成功"
        android:textColor="@color/sola_bar_code_result_text_color"
        android:textSize="@dimen/sola_middle_font_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备型号:"
            android:textColor="@color/sola_bar_code_result_name_color"
            android:textSize="@dimen/sola_small_font_size" />

        <TextView
            android:id="@+id/textview_equipment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/sola_bar_code_result_info_color"
            android:text=""
            android:textSize="@dimen/sola_small_font_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/sola_bar_code_result_name_color"
            android:text="M A C号:"
            android:textSize="@dimen/sola_small_font_size" />

        <TextView
            android:id="@+id/textview_mac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/sola_bar_code_result_info_color"
            android:text=""
            android:textSize="@dimen/sola_small_font_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_to_quipment_setting"
            android:layout_width="0dp"
            android:layout_height="@dimen/sola_button_height"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/sola_text_color"
            android:textSize="@dimen/sola_small_font_size"
            android:background="@drawable/sola_button_bg"
            android:layout_weight=".6"
            android:text="进入配置页面 " />
    </LinearLayout>

</LinearLayout>